    <script>
     document.addEventListener('DOMContentLoaded', () => {
    const htmlElement = document.documentElement;
    const toggleButton = document.getElementById('darkModeToggleButton');
    const icon = document.getElementById('darkModeIcon');

    if (!toggleButton || !icon) {
        console.error('Tombol atau Ikon untuk dark mode tidak ditemukan.');
        return;
    }

    const lightIconSrc = '/assets/icons/moon-stars.svg'; // Ikon bulan untuk light mode
    const darkIconSrc = '/assets/icons/sun.svg';         // Ikon matahari untuk dark mode

    const applyTheme = (isDark) => {
        if (isDark) {
            htmlElement.classList.add('dark');
            icon.src = darkIconSrc; // Tampilkan ikon matahari
            icon.classList.add('filter-white-icon'); // Jadikan ikon matahari putih
        } else {
            htmlElement.classList.remove('dark');
            icon.src = lightIconSrc; // Tampilkan ikon bulan
            icon.classList.remove('filter-white-icon'); // Pastikan ikon bulan tidak putih
        }
    };

    const toggleDarkMode = () => {
        const isDarkMode = htmlElement.classList.toggle('dark');
        localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');
        applyTheme(isDarkMode);
    };

    toggleButton.addEventListener('click', toggleDarkMode);

    // Ambil tema yang tersimpan
    const savedTheme = localStorage.getItem('theme');

    // Tentukan tema awal saat halaman dimuat
    // Gunakan tema tersimpan, atau preferensi sistem jika belum ada tema tersimpan
    const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
    const initialTheme = savedTheme === 'dark' || (savedTheme === null && prefersDark);
    applyTheme(initialTheme);
});
